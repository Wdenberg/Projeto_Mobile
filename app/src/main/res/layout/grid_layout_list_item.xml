<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/gridItens"
    tools:context=".MainActivity"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/card_color"
        >

        <ImageView
            android:id="@+id/icons_img"
            android:layout_width="156dp"
            android:layout_height="136dp"
            android:src="@drawable/texas_burger" />

        <TextView
            android:id="@+id/burguer_subName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icons_img"
            android:fontFamily="sans-serif-light"
            android:text="Tradicional"
            android:textSize="12dp"
            android:paddingLeft="8dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/burguer_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:layout_below="@id/burguer_subName"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            android:text="Texa Burguer"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/textp"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_below="@id/burguer_Name"
            android:text="R$: "
            android:fontFamily="sans-serif-light"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            />

        <TextView
            android:id="@+id/burguer_Price"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@id/textp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-35dp"
            android:layout_toEndOf="@+id/textp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:text="24,90"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>